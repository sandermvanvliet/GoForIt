@model dynamic

@{
    ViewBag.Title = "Current flows";
}
<h2>My flows</h2>

<div class="row" id="bindingTarget">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>If</th>
                    <th></th>
                    <th>Then</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: flows">
                <tr>
                    <td data-bind="text: eventName"></td>
                    <td><strong>then</strong></td>
                    <td data-bind="text: actionName"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    var viewModel = new ListFlowsViewModel("@Url.Action("List")");

    viewModel.load();

    ko.applyBindings(viewModel, document.getElementById("bindingTarget"));
</script>